{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["php84", "php84Packages.composer"]
        },
        "install": {
          "cmds": ["composer install --no-dev --optimize-autoloader"]
        }
      },
      "start": {
        "cmd": "php artisan serve --host=0.0.0.0 --port=$PORT"
      }
    }
  }
}